{
    "manifest_version": 2,
    "name": "FullFocus",
    "description": "---",
    "version": "1.0",
    "content_scripts":[{
        "css": ["style.css", "hide.css"],
        "matches": [
            "https://www.youtube.com/*"
        ],
        "js": ["content.js"]
        }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "storage", "tabs", "webNavigation"
    ],
    "browser_action": {},
    "web_accessible_resources": [
        "show.css"
    ]

}