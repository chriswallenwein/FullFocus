{
    "manifest_version": 2,
    "name": "FullFocus",
    "description": "Regain your focus on YouTube when working or educating yourself",
    "version": "0.1",
    "content_scripts":[{
        "css": ["style.css", "hide.css"],
        "matches": [
            "https://www.youtube.com/*"
        ],
        "js": ["content.js"]
        }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "storage", "tabs"
    ],
    "browser_action": {
        "default_icon": "true.png"
    },
    "web_accessible_resources": [
        "show.css"
    ]

}